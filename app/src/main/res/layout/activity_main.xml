<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:theme="@android:style/Theme.Light"
    tools:context=".MainActivity">

    <View
        android:id="@+id/d1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0000FF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:text="MiddleTest"
        android:gravity="center_vertical"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/d1"
        app:layout_constraintLeft_toLeftOf="@id/d1"
        app:layout_constraintRight_toRightOf="@id/d1"
        app:layout_constraintTop_toTopOf="@id/d1"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/numberInput"
        android:layout_width="104dp"
        android:layout_height="46dp"
        android:inputType="number"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="81dp" />

    <EditText
        android:id="@+id/numberInput2"
        android:layout_width="110dp"
        android:layout_height="47dp"
        android:inputType="number"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="79dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="50dp"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="70dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="30dp"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="77dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="311dp"
        android:layout_height="39dp"
        android:text="8 / 4 = 2"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="171dp" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="490dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="240dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="311dp"
            android:layout_height="39dp"
            android:text="8 / 4 = 2"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="171dp" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="311dp"
            android:layout_height="39dp"
            android:text="10 / 2 = 5"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="171dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="311dp"
            android:layout_height="39dp"
            android:text="1 / 3 = 0.333333"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="171dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>